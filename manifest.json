{
  "manifest_version": 3,
  "name": "KOSTA Timer",
  "version": "1.0",
  "description": "KOSTA enter/exit timer extension made by HHJ",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms", "notifications", "storage", "activeTab"],
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
